var ComponentExample = React.createClass({
  _getButtonStyle() {
    return {
      background: '#3498db',
      border: 0,
      borderRadius: 3,
      boxShadow: '0px 5px 0px #2980b9',
      color: 'white',
      display: 'block',
      fontSize: 14,
      fontWeight: 'bold',
      margin: "20px auto",
      minWidth: 200,
      outline: 0,
      padding: 10
    }
  },

  render: function() {
    return (
      <Button buttonStyle={this._getButtonStyle()}>
        <p>My Button</p>
      </Button>
    )
  }
});

ReactDOM.render(<ComponentExample/>, mountNode);
